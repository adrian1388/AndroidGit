<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="hm.ProyLocate">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher" android:theme="@style/AppTheme">
        <!-- Activity with SearchDialog enabled -->
        <activity
            android:name="hm.ProyLocate.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Enabling Search Dialog -->
            <meta-data android:name="android.app.default_searchable"
                android:value="hm.ProyLocate.SearchableActivity" />
        </activity>

        <!-- A Searchable activity, that handles the searches -->
        <activity android:name="hm.ProyLocate.SearchableActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <!-- Activity that shows the country details -->
        <activity android:name="hm.ProyLocate.ProdActivity" />

        <!-- Content Provider to query sqlite database -->
        <provider
            android:name="hm.ProyLocate.ProdContentProvider"
            android:authorities="hm.ProyLocate.ProdContentProvider"
            android:exported="true" />
    </application>

</manifest>
